---
interface Props {
  id: number;
  name: string;
  year: number;
  image: string;
  type: string;
  description: string;
}

const { name, year, image, type, description, id } = Astro.props;
---

<div class="w-auto h-auto flex relative group">
  <picture class="w-auto h-auto">
    {
      type == "Horizontal" ? (
        <img src={image} alt="projects-img" class="w-96 h-52 rounded" />
      ) : (
        <img
          src={image}
          alt="projects-img"
          class="w-full max-w-[200px] h-auto aspect-9/16 object-cover rounded items-center"
        />
      )
    }
  </picture>

  <!-- Text header -->
  <div
    class="w-full h-10 bg-white opacity-50 absolute group-hover:h-full group-hover:opacity-100 transition-all ease-in-out 1ms bottom-0 rounded overflow-hidden text-black"
  >
    <span class="font-[Sauce] text-[18px] text-center text-balance  border-b-neutral-900">
      {name}
    </span>

    <div
      class="w-full h-auto opacity-0 flex flex-row group-hover:block group-hover:opacity-100 transition-all ease-in 2s p-3 text-balance"
    >
      <p class="mb-4">
        {description}
      </p>

      <div
        class="flex flex-row w-full h-20 items-center justify-center text-center"
      >
        <a
          href={`projects/${id}`}
          class="bg-neutral-500 w-20 h-10 p-2 rounded-full hover:bg-neutral-700"
          >Ver m√°s</a
        >
      </div>
    </div>
  </div>
</div>
