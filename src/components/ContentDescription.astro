---
interface Props {
    title?:string,
    year?:number,
    description?:string,
    software?:string
}

const {title, year, description, software} = Astro.props;
---

<section class="w-full min-h-auto  text-white mb-16">
    <div class="flex flex-row flex-wrap w-full h-auto ">
        <!-- divider -->
         <div class="w-50 h-3 "></div>

         <div class="w-full h-50 ">
            <h1>{title}</h1>
            <p class="text-neutral-500">
                {description}
            </p>
            <p class="inline-flex items-center rounded-full bg-neutral-400/10 px-5 py-2 text-xs font-black text-neutral-400 inset-ring inset-ring-neutral-500/20 mt-4 mb-4">
                {software}
            </p>
         </div>
    </div>
</section>