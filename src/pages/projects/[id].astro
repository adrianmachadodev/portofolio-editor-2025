---
import Layout from "../../layouts/Layout.astro";
import { PROJECTS } from "../../const/projects";
import ContentVideo from "../../components/ContentVideo.astro";
import ContentDescription from "../../components/ContentDescription.astro";

export const getStaticPaths = () => {
  return PROJECTS.map((res: any) => ({
    params: { id: res.id },
  }));
};

const { id } = Astro.params;

const contentVideos = PROJECTS.find((video: any) => video.id == id);
console.log(contentVideos);
---

<Layout>
  <div class="w-full h-screen bg-red-500 flex flex-row justify-center">
    <section class="w-6xl h-auto  flex flex-col">
      <!-- Section video -->
      <ContentVideo url={contentVideos?.url}></ContentVideo>

      <!-- Description -->
       <ContentDescription year={contentVideos?.year} description={contentVideos?.name} title={contentVideos?.description}></ContentDescription>
      <!-- Destails -->
    </section>
  </div>
</Layout>
