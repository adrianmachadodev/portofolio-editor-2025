<header
  class="bg-[#151515] flex flex-row w-full justify-around h-24 fixed top-0 border-b border-b-neutral-800 z-20 backdrop-blur-lg items-center"
>
  <div class="flex flex-row w-80 justify-center items-center gap-2">
    <div class="flex flex-row w text-white">
      <a class="flex flex-row items-center gap-2" href="/">
        <div class="w-12 h-12 flex flex-row justify-center items-center">
          <img src="/logo/logo-adrian.png" alt="logo-header" />
        </div>
        Adrian Machado
      </a>
    </div>
  </div>

  <nav class="hidden md:flex flex-row w-96">
    <ul class="flex flex-row justify-center items-center text-white gap-4">
      <li><a href="#" class="hover:text-neutral-600">Inicio</a></li>
      <li><a href="#about" class="hover:text-neutral-600">Sobre Mi</a></li>
      <li><a href="#projects" class="hover:text-neutral-600">Trabajos</a></li>
      <li>
        <a href="#skills" class="hover:text-neutral-600">Habilidades</a>
      </li>
    </ul>
  </nav>

  <label
    class="w-10 h-10 flex justify-center md:hidden items-center cursor-pointer z-20"
  >
    <div class="flex flex-col gap-2 w-8">
      <input id="menu-toggle" type="checkbox" class="peer hidden" />
      <div
        class="line1 rounded-2xl h-[3px] w-1/2 bg-white duration-500
        peer-checked:rotate-[225deg] origin-right
        peer-checked:-translate-x-[12px] peer-checked:-translate-y-[1px]"
      >
      </div>

      <div
        class="line2 rounded-2xl h-[3px] w-full bg-white duration-500
        peer-checked:-rotate-45"
      >
      </div>

      <div
        class="line3 rounded-2xl h-[3px] w-1/2 bg-white duration-500 place-self-end
        peer-checked:rotate-[225deg] origin-left
        peer-checked:translate-x-[12px] peer-checked:translate-y-[1px]"
      >
      </div>
    </div>
  </label>

  <nav
    id="navbar"
    class="absolute top-20 w-full bg-[#151515]
       text-white
    flex-col items-center gap-4 py-4
    hidden peer-checked:flex md:hidden closed-menu z-10 text-center text-4xl"
  >
    <a href="#" class="block py-1 hover:text-neutral-400 link-item">Inicio</a>
    <a href="#about" class="block py-1 hover:text-neutral-400 link-item"
      >Sobre Mi</a
    >
    <a href="#projects" class="block py-1 hover:text-neutral-400 link-item"
      >Trabajos</a
    >
    <a href="#skills" class="block py-1 hover:text-neutral-400 link-item"
      >Habilidades</a
    >
  </nav>
</header>

<style>
  .open-menu {
    display: block;
    height: 300px;
    overflow: hidden;
    transition: all ease 1s;
  }
  .closed-menu {
    display: none;
  }
</style>

<script>
  const hamburguerMenu = document.getElementById("menu-toggle");
  const navbar = document.getElementById("navbar");
  const links = navbar?.querySelectorAll("link-item");

  hamburguerMenu?.addEventListener("click", () => {
    navbar?.classList.toggle("open-menu");
    navbar?.classList.toggle("closed-menu");
  });

  links?.forEach((link: any) => {
    link.addEventListener("click", () => {
      navbar?.classList.add("closed-menu");
      if (hamburguerMenu) hamburguerMenu.checked = true;
    });
  });
</script>
